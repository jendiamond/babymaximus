<p id="notice"><%= notice %></p>

<h1>Baths</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Bath</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @baths.each do |bath| %>
      <tr>
        <td><%= bath.day %></td>
        <td><%= bath.bath %></td>
        <td><%= bath.notes %></td>
        <td><%= link_to 'Show', bath %></td>
        <td><%= link_to 'Edit', edit_bath_path(bath) %></td>
        <td><%= link_to 'Destroy', bath, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

