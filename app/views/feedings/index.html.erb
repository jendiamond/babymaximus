<p id="notice"><%= notice %></p>

<h1>Feedings</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Feeding time</th>
      <th>Left</th>
      <th>Right</th>
      <th>Minutes</th>
      <th>Feeding type</th>
      <th>Feeding amount</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedings.each do |feeding| %>
      <tr>
        <td><%= feeding.day %></td>
        <td><%= feeding.feeding_time %></td>
        <td><%= feeding.left %></td>
        <td><%= feeding.right %></td>
        <td><%= feeding.minutes %></td>
        <td><%= feeding.feeding_type %></td>
        <td><%= feeding.feeding_amount %></td>
        <td><%= feeding.notes %></td>
        <td><%= link_to 'Show', feeding %></td>
        <td><%= link_to 'Edit', edit_feeding_path(feeding) %></td>
        <td><%= link_to 'Destroy', feeding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

