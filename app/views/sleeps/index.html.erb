<p id="notice"><%= notice %></p>

<h1>Sleeps</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Sleep start</th>
      <th>Sleep end</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sleeps.each do |sleep| %>
      <tr>
        <td><%= sleep.day %></td>
        <td><%= sleep.sleep_start %></td>
        <td><%= sleep.sleep_end %></td>
        <td><%= sleep.notes %></td>
        <td><%= link_to 'Show', sleep %></td>
        <td><%= link_to 'Edit', edit_sleep_path(sleep) %></td>
        <td><%= link_to 'Destroy', sleep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

