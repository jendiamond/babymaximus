<p id="notice"><%= notice %></p>

<h1>Diapers</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Diaper type</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diapers.each do |diaper| %>
      <tr>
        <td><%= diaper.day %></td>
        <td><%= diaper.diaper_type %></td>
        <td><%= diaper.notes %></td>
        <td><%= link_to 'Show', diaper %></td>
        <td><%= link_to 'Edit', edit_diaper_path(diaper) %></td>
        <td><%= link_to 'Destroy', diaper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Diaper', new_diaper_path %>
